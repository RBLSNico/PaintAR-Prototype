                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#01356f" />

                    <Button
                        android:id="@+id/chromegreenButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#2c3c22" />

                    <Button
                        android:id="@+id/trafficYellowButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#feac00" />

                    <Button
                        android:id="@+id/safetyorangeButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#dc2f0f" />

                    <!--            <Button-->
                    <!--                android:id="@+id/ceramicredButton"-->
                    <!--                android:layout_width="100dp"-->
                    <!--                android:layout_height="100dp"-->
                    <!--                android:background="#803b1c" />-->

                    <!--            <Button-->
                    <!--                android:id="@+id/blackButton"-->
                    <!--                android:layout_width="100dp"-->
                    <!--                android:layout_height="100dp"-->
                    <!--                android:background="#0f0e0c" />-->

                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:id="@+id/coolshadestextView"
                android:text="BOYSEN® Cool Shades™"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/montserat_bold"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#ffffff"
                android:padding="10dp"
